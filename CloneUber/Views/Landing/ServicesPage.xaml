            <StackLayout Orientation="Horizontal" Spacing="20" >
                <Label Text="Viaje"
                       FontAttributes="Bold"
                       VerticalOptions="End"
                       Margin="10"
                       HorizontalOptions="Start"/>
                <Image Source="https://i.ibb.co/KmTm4kq/comfort-removebg-preview.png"
                       Aspect="AspectFit"
                       MaximumWidthRequest="150"
